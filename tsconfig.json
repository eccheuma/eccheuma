{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false, 
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "jsx": "preserve",    
    "baseUrl": ".",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./source/*"],
      "path::root/*": ["./*"]
    },
    "types": [
      "./source/wasm",
      "vue/types",
      "@types/node",
      "@nuxt/types",
      "@types/w3c-css-typed-object-model-level-1",
      "nuxt-webpack-optimisations",
    ]
  },
  "vueCompilerOptions": {
    "target": 2.7,
    // "jsxTemplates": false
  },
  "exclude": [
    ".nuxt",
    ".firebase",
    "funtions",
    "node_modules",
    "packages",
    "app"
  ]
}
